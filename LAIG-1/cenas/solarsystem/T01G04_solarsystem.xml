    <graph rootid="solarsystem">
        <node id="planet">
            <transforms>
                <rotate axis="x" angle="-80"/>
            </transforms>
            <children>
                <sphere radius="1" slices="15" stacks="15" />
            </children>
        </node>
        <node id="planet_ring">
            <transforms />
            <children>
                <torus inner="0.015" outer="1.4" slices="50" loops="50" />
            </children>
        </node>
        <node id="solarsystem">
            <transforms />
            <children>
                <noderef id="sun" />
                <noderef id="mercury" />
                <noderef id="venus" />
                <noderef id="earthsystem" />
                <noderef id="mars" />
                <noderef id="jupiter" />
                <noderef id="saturn" /> <!-- with ring -->
                <noderef id="uranus" /> <!-- with ring -->
                <noderef id="neptune" />
                <noderef id="spherebg" />
            </children>
        </node>
        <node id="spherebg">
            <transforms>
                <scale factor="-1.0 -1.0 -1.0" />
            </transforms>
            <appearanceref id="stars" />
            <children> 
                <sphere radius="500" slices="20" stacks="20" />
            </children>
        </node>
        <node id="sun">
            <transforms />
            <appearanceref id="sun" />
            <children>
                <sphere radius="6.96" slices="20" stacks="20" />
            </children>
        </node>
        <node id="mercury">
            <transforms>
                <translate to="12.751 0 0"/>
                <scale factor="0.02576 0.02576 0.02576" />
            </transforms>
            <appearanceref id="mercury" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="venus">
            <transforms>
                <translate to="17.78 0 0"/>
                <scale factor="0.060518 0.060518 0.060518" />
            </transforms>
            <appearanceref id="venus" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="earthsystem">
            <transforms>
                <translate to="21.92 0 0"/>
            </transforms>
            <children>
                <noderef id="earth" />
                <noderef id="moon" />
            </children>
        </node>
        <node id="earth">
            <transforms>
                <scale factor="0.06371 0.06371 0.06371" />
            </transforms>
            <appearanceref id="earth" />
            <children>
